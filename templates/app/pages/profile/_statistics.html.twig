    <button type="button" class="position-absolute top-0 translate-middle btn btn-sm rounded-pill {% if app.user.progression >= 8 %} btn-warning {% else %} btn-outline-warning {% endif %}" style="width: 2rem; height:2rem; margin-left: 33%;">1</button>
    <button type="button" class="position-absolute top-0 translate-middle btn btn-sm rounded-pill {% if app.user.progression >= 9 %} btn-warning {% else %} btn-outline-warning {% endif %}" style="width: 2rem; height:2rem; margin-left: 66%;">2</button>
    <button type="button" class="position-absolute top-0 translate-middle btn btn-sm rounded-pill {% if app.user.progression >= 10 %} btn-warning {% else %} btn-outline-warning {% endif %}" style="width: 2rem; height:2rem; margin-left: 100%;">3</button>
