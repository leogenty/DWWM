{% extends 'offsite_base.html.twig' %}

{% set page_title = 'Connexion' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('security_pages_login') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('security_pages_login') }}
{% endblock %}

{% block body %}
    <h1 class="text-info text-center my-4">Veuillez vous connecter</h1>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="card w-50 mx-auto mt-3 mb-5">
            <div class="card-header">
                <h1 class="h3 font-weight-normal">Entrez vos identifiants</h1>
            </div>
            <div class="card-body p-4">
                <label for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mb-3" autocomplete="email" required autofocus>
                <label for="password">Password</label>
                <input type="password" name="_password" id="password" class="form-control mb-4" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-primary" type="submit">Sign in</button>
            </div>
            <div class="card-footer text-center">
                <p class="mb-2 fs-4">Toujours pas de compte ?</p>
                <a class="btn btn-outline-warning" href="{{ path('app_register') }}" type="button">
                    <span class="fa-brands fa-creative-commons-by me-2"></span>Cr√©er ton compte
                </a>
            </div>
        </div>
        </form>
{% endblock %}