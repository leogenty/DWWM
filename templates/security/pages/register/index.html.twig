{% extends 'offsite_base.html.twig' %}

{% set page_title = 'Inscription' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('security_pages_register') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('security_pages_register') }}
{% endblock %}

{% block body %}
    <h1 class="text-info text-center mb-3 animate__animated animate__fadeIn">Cr√©er ton compte</h1>

    {{ form_start(form) }}
    <div class="card bg-light mx-auto w-50 mt-3 mb-5">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-6 fs-4">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="col-12 col-md-6 fs-4">
                    {{ form_row(form.lastname) }}
                </div>
            </div>
            <div class="row>">
                <div class="col-12 col-md-10 fs-4">
                    {{ form_row(form.name) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-md-8 fs-4">
                    {{ form_row(form.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-md-8 fs-4">
                    <div class="mb-3">
                        <label for="register_password" class="form-label required">Mot de passe</label>
                        <div class="input-group" id="show_hide_password">
                            {{ form_widget(form.password) }}
                            <div class="input-group-text">
                                <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_row(form.agreeTerms) }}

            <button class="btn btn-lg btn-outline-primary" type="submit">Enregistrer</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}