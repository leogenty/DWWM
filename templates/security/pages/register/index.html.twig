{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('security_pages_register') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('security_pages_register') }}
{% endblock %}

{% block body %}
    <h1 class="text-primary">Security - Register</h1>

    {{ form_start(form) }}
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-6">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="col-12 col-md-6">
                    {{ form_row(form.lastname) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-md-4">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-12 col-md-4">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-12 col-md-4">
                    {{ form_row(form.password) }}
                </div>
            </div>
            {{ form_row(form.agreeTerms) }}

            <button type="submit" class="btn btn-outline-primary">Cr√©er son compte</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}